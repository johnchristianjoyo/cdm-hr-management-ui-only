@page
@model CDM.HRManagement.Pages.HR.DashboardModel
@{
    ViewData["Title"] = "HR Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-primary">HR Dashboard</h1>
            <p class="text-muted">Welcome back! Here's your overview for Colegio de Montalban.</p>
        </div>
    </div>

    <!-- Quick Actions - Main Focus -->
    <div class="row g-4 justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="mb-4 fw-bold text-center">
                        <i class="bi bi-lightning-charge-fill text-warning"></i> Quick Actions
                    </h5>

                    <div class="row g-4">
                        <!-- Add New Employee -->
                        <div class="col-md-6 col-lg-3">
                            <a href="/HR/AddEmployee" class="text-decoration-none">
                                <div class="card border-0 bg-primary bg-opacity-10 h-100 hover-lift">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-person-plus-fill text-primary fs-1 mb-3"></i>
                                        <h5 class="fw-bold text-dark">Add New Employee</h5>
                                        <p class="text-muted mb-0">Generate onboarding link for new employee</p>
                                    </div>
                                </div>
                            </a>
                        </div

                        <!-- View Applicants -->
                        <div class="col-md-6 col-lg-3">
                            <a href="/HR/ViewApplicants" class="text-decoration-none">
                                <div class="card border-0 bg-danger bg-opacity-10 h-100 hover-lift">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-file-earmark-person-fill fs-1"></i>
                                        <h5 class="fw-bold text-dark">View Applicants</h5>
                                        <p class="text-muted mb-0">View list of new applicants</p>
                                    </div>
                                </div>
                            </a>
                        </div>


                       <!-- View Employees -->
                        <div class="col-md-6 col-lg-3">
                            <a href="/HR/Employees" class="text-decoration-none">
                                <div class="card border-0 bg-success bg-opacity-10 h-100 hover-lift">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-people-fill text-success fs-1 mb-3"></i>
                                        <h5 class="fw-bold text-dark">View Employees</h5>
                                        <p class="text-muted mb-0">Browse and manage all employees</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Generate Service Record -->
                        <div class="col-md-6 col-lg-3">
                            <a href="/HR/GenerateServiceRecord" class="text-decoration-none">
                                <div class="card border-0 bg-info bg-opacity-10 h-100 hover-lift">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-file-earmark-text-fill text-info fs-1 mb-3"></i>
                                        <h5 class="fw-bold text-dark">Service Record</h5>
                                        <p class="text-muted mb-0">Generate employee service certificate</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Training Records -->
                        <div class="col-md-6 col-lg-3">
                            <a href="/HR/Trainings" class="text-decoration-none">
                                <div class="card border-0 bg-warning bg-opacity-10 h-100 hover-lift">
                                    <div class="card-body text-center p-4">
                                        <i class="bi bi-mortarboard-fill text-warning fs-1 mb-3"></i>
                                        <h5 class="fw-bold text-dark">Training Records</h5>
                                        <p class="text-muted mb-0">Manage employee trainings and trainers</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .hover-lift:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
        }
</style>
