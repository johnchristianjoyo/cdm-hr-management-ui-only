@page
@model CDM.HRManagement.Pages.Onboarding.ThankYouModel
@{
    ViewData["Title"] = "Submission Successful";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <!-- Success Icon -->
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 6rem;"></i>
            </div>

            <!-- Success Message -->
            <h1 class="display-5 fw-bold text-success mb-3">Thank You!</h1>
            <h2 class="h4 text-muted mb-4">Your onboarding form has been submitted successfully</h2>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        <i class="bi bi-info-circle text-primary"></i>
                        Your information has been received and is currently under review by the HR Department.
                    </p>

                    <div class="alert alert-light border">
                        <h6 class="fw-bold mb-3">What happens next?</h6>
                        <ul class="text-start mb-0">
                            <li class="mb-2">HR will review your submitted information</li>
                            <li class="mb-2">You will receive an email confirmation within 24-48 hours</li>
                            <li class="mb-2">If any information needs clarification, HR will contact you</li>
                            <li>Once approved, you'll receive your employee ID and access credentials</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted mb-0">
                            <strong>Reference Number:</strong> <span class="text-primary">ONB-@DateTime.Now.ToString("yyyyMMddHHmmss")</span>
                        </p>
                        <small class="text-muted">Please save this reference number for your records</small>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <p class="text-muted">
                    If you have any questions, please contact the HR Department at:<br>
                    <i class="bi bi-envelope"></i> <strong>hr@colegiodemontalban.edu.ph</strong><br>
                    <i class="bi bi-telephone"></i> <strong>(02) 1234-5678</strong>
                </p>
            </div>

            <div class="mt-4">
                <a href="/" class="btn btn-outline-primary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
