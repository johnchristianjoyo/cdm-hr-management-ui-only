@page
@model CDM.HRManagement.Pages.HR.TrainingsModel
@{
    ViewData["Title"] = "Training Records";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-mortarboard-fill"></i> Training Records
            </h1>
            <p class="text-muted">Manage employee trainings and track trainers</p>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-primary btn-lg me-2" onclick="showAddTrainingModal()">
                <i class="bi bi-plus-circle"></i> Add New Training
            </button>
            <a href="/HR/Dashboard" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-trainings-tab" data-bs-toggle="tab" data-bs-target="#all-trainings" type="button">
                <i class="bi bi-list-ul"></i> All Trainings
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="trainers-tab" data-bs-toggle="tab" data-bs-target="#trainers" type="button">
                <i class="bi bi-person-workspace"></i> Trainers
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="by-department-tab" data-bs-toggle="tab" data-bs-target="#by-department" type="button">
                <i class="bi bi-building"></i> By Department
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- All Trainings Tab -->
        <div class="tab-pane fade show active" id="all-trainings" role="tabpanel">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Search -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-lg" placeholder="Search trainings...">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select form-select-lg">
                                <option value="">All Departments</option>
                                <option>IT Department</option>
                                <option>College of Engineering</option>
                                <option>Human Resources</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select form-select-lg">
                                <option value="">All Years</option>
                                <option>2025</option>
                                <option>2024</option>
                                <option>2023</option>
                            </select>
                        </div>
                    </div>

                    <!-- Training Cards -->
                    <div class="row g-4">
                        <!-- Training 1 -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="fw-bold mb-0">Cybersecurity Awareness Training</h5>
                                        <span class="badge bg-primary">IT Department</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar"></i> Date: September 15, 2025
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-clock"></i> Duration: 4 hours
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Trainer:</strong>
                                        <p class="mb-0">Pedro Garcia - IT Administrator</p>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Participants:</strong>
                                        <p class="mb-0">25 employees</p>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewTrainingDetails('Cybersecurity')">
                                            <i class="bi bi-eye"></i> View Details
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Training 2 -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="fw-bold mb-0">Data Mining and Analytics</h5>
                                        <span class="badge bg-success">IT Department</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar"></i> Date: August 20, 2025
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-clock"></i> Duration: 8 hours
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Trainer:</strong>
                                        <p class="mb-0">Dr. Juan Dela Cruz - Professor</p>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Participants:</strong>
                                        <p class="mb-0">15 employees</p>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewTrainingDetails('Data Mining')">
                                            <i class="bi bi-eye"></i> View Details
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Training 3 -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="fw-bold mb-0">Web Development Fundamentals</h5>
                                        <span class="badge bg-info">IT Department</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar"></i> Date: July 10, 2025
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-clock"></i> Duration: 16 hours (2 days)
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Trainer:</strong>
                                        <p class="mb-0">Maria Santos - Associate Professor</p>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Participants:</strong>
                                        <p class="mb-0">20 employees</p>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewTrainingDetails('Web Development')">
                                            <i class="bi bi-eye"></i> View Details
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Training 4 -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="fw-bold mb-0">Project Management Essentials</h5>
                                        <span class="badge bg-warning">Human Resources</span>
                                    </div>

                                    <div class="mb-3">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar"></i> Date: June 5, 2025
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-clock"></i> Duration: 6 hours
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Trainer:</strong>
                                        <p class="mb-0">Ana Reyes - Registrar</p>
                                    </div>

                                    <div class="mb-3">
                                        <strong class="text-primary">Participants:</strong>
                                        <p class="mb-0">30 employees</p>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewTrainingDetails('Project Management')">
                                            <i class="bi bi-eye"></i> View Details
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trainers Tab -->
        <div class="tab-pane fade" id="trainers" role="tabpanel">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-person-workspace"></i> List of Trainers
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4">Trainer Name</th>
